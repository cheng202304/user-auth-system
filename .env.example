# 用户认证系统环境变量配置示例
# 请将此文件复制为 .env 并填写实际值

# 应用基本信息
APP_NAME=User Authentication System
APP_VERSION=1.0.0
APP_ENV=production

# 前端配置
VITE_API_URL=/api
VITE_APP_TITLE=用户认证系统

# 后端配置
PORT=3000
HOST=0.0.0.0

# 数据库配置
DATABASE_PATH=./data/auth.db
DATABASE_SYNC=false

# JWT 认证配置
JWT_SECRET=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_EXPIRES_IN=30d

# 安全配置
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 邮件配置（可选）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASS=your_email_password
MAIL_FROM=your_email@example.com

# Redis 配置（可选，用于会话管理）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 示例管理员账户（仅在初始化时使用）
INIT_ADMIN_ACCOUNT=000000
INIT_ADMIN_PASSWORD=admin123456